<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PhotoGO</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!--My css file-->
    <link rel="stylesheet" type="text/css" href="~/Content/ItemsStyles.css" />

    <!--For implementing loader-->
    <link rel="stylesheet" type="text/css" href="~/Content/Loader.css" />

    <!--For icons with "fa" class-->
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.css" />

    <!--Validation-->
    <script src="/scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>

    <!--Image preview styles-->
    <link rel="stylesheet" type="text/css" href="~/Content/jquery.fancybox.css">
    <script type="text/javascript" src="~/Scripts/jquery.fancybox.js"></script>

    <!--Pagination-->
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

    <!--Autocomplete-->
    <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.10.4.custom.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.autocomplete.multiselect.js" type="text/javascript"></script>
    <link href="~/Content/main.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/normalize.css" rel="stylesheet" type="text/css" />

    <!--Searchbox-->
    @*<link href="~/Other/base.css" rel="stylesheet" type="text/css" />
        <link href="~/Other/bootstrap-select.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Other/custom.css" rel="stylesheet" type="text/css" />
        <link href="~/Other/highlight.css" rel="stylesheet" type="text/css" />

        <script type="text/javascript" src="~/Other/base.js"></script>
        <script type="text/javascript" src="~/Other/highlight.pack.js"></script>
        <script type="text/javascript" src="~/Other/bootstrap-select.min.js"></script>*@

    <!--Live like button-->
    <script src="/Scripts/likeButton.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PhotoGO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("admin"))
                    {
                        <li>@Html.ActionLink("Manage users", "Users", "Management")</li>
                    }
                    @if (User.IsInRole("moderator") || User.IsInRole("admin"))
                    {
                        <li>@Html.ActionLink("Manage media", "Manage", "Images")</li>
                    }

                    <li>
                        <form class="navbar-form" id="demo" action="/Images/Search" style="width:300px">
                            <div class="input-group">
                                <input type="hidden" name="tags" id="selected-tags"/>
                                <input type="text" role="textbox" id="myAutocomplete"/>
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Log In", "Login", "Account")</li>
                        <li>@Html.ActionLink("Sign In", "Register", "Account")</li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#"> My Profile <span class="caret"></span></a>
                            <ul class="dropdown-menu" id="dropdown">
                                <li>@Html.ActionLink("Albums", "Index", "Albums")</li>
                                <li>@Html.ActionLink("Favourites", "Favourites", "Images")</li>
                                <li>@Html.ActionLink("Settings", "Settings", "Profile")</li>
                            </ul>
                        </li>

                        <li>@Html.ActionLink("Log Out", "Logout", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>

    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            var tags = '@Url.Action("Autocomplete", "Images")';

            $('#myAutocomplete').autocomplete({
                source: tags,
                multiselect: true
            });

            $(".ui-autocomplete-multiselect").on("mouseenter mouseleave", function () {
                var div = document.getElementsByClassName("ui-autocomplete-multiselect")[0];
                var items = div.getElementsByClassName("ui-autocomplete-multiselect-item");

                $.each(items, function (index, value) {
                    var text = $('#selected-tags').text();
                    if (!text.includes($(value).text()))
                        $('#selected-tags').append($(value).text() + " "); 
                });
            });
        });
    </script>
</body>
</html>


