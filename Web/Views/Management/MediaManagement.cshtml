@model PagedList.IPagedList<Web.Models.ImageModel>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="~/Content/Loader.css" />

<link rel="stylesheet" type="text/css" href="~/Content/jquery.fancybox.css">
<script type="text/javascript" src="~/Scripts/jquery.fancybox.js"></script>

<!-- Modal window-->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
</div>
<!--End modal-->

<div class="loader" id="loader" style="display:none"></div>
<div id="bodycontent" style="display:block">
    
    <div class="row">
        @foreach (var img in Model)
        {
            <div class="col-md-2">
                <div class="thumbnail">
                    <a data-trigger="preview" href="data:image;base64,@System.Convert.ToBase64String(img.Img)" data-fancybox="preview">
                        <img src="data:image;base64,@System.Convert.ToBase64String(img.Img)" style="height:200px; width:200px">
                    </a>
                    <p>
                        @foreach (var tag in img.Tags)
                        {
                            <a href="@Url.Action("Search", "Media", new { tag = tag })">#@tag</a>
                        }
                    </p>
                    <p>
                        <button class="btn btn-success glyphicon-plus modal-link" data-link="/Management/AddTags?imgId=@img.Id"></button>
                        <button class="btn btn-default modal-link" data-link="/Management/Remove/@img.Id">Remove</button>
                    </p>
                </div>
            </div>
        }
    </div>

    @Html.PagedListPager(Model, page => Url.Action("Media", "Management", new { page }))
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".modal-link").click(function () {
            var btn = $(this);
            $.get(btn.data("link"), function (data) {
                $("#myModal").html(data);
                $("#myModal").modal();
            })
        });
    });
</script>