@model PagedList.IPagedList<Web.Models.AlbumModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div>
    <!-- Modal window-->
    <div class="modal fade col-md-6" id="myModal" tabindex="-1" role="dialog">
    </div>
    <!--End modal-->

    <button class="btn btn-success modal-link" data-link="/Profile/CreateAlbum">Create album</button>

    <div class="row">
        @foreach (var album in Model)
        {
            <div class="col-md-3">
                <div class="thumbnail">
                    <a href="#">
                        <img src="data:image;base64,@System.Convert.ToBase64String(album.Img)">
                    </a>
                    <div>
                        <p><h4>@album.Name</h4></p>
                    </div>
                </div>
            </div>
        }
    </div>

    @Html.PagedListPager(Model, page => Url.Action("Albums", "Profile", new { page }))
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".modal-link").click(function () {
            var btn = $(this);
            $.get(btn.data("link"), function (data) {
                $("#myModal").html(data);
                $("#myModal").modal();
            })
        });
    });
</script>