@model PagedList.IPagedList<Web.Models.ImageModel>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="~/Content/Loader.css" />

<div>
    <!-- Modal window-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    </div>
    <!--End modal-->

    <div class="loader" id="loader" style="display:none"></div>


    <button class="btn btn-success modal-link" data-link="/Profile/AddImg?albumId=@ViewBag.AlbumId">Add image</button>

    <div class="row">
        @foreach (var img in Model)
        {
            <div class="col-md-2">
                <div class="thumbnail">
                    <a href="#">
                        <img src="data:image;base64,@System.Convert.ToBase64String(img.Img)" style="height:200px; width:200px">
                    </a>
                </div>
            </div>
        }
    </div>

    @Html.PagedListPager(Model, page => Url.Action("Images", "Profile", new { page }))
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".modal-link").click(function () {
            var btn = $(this);
            $.get(btn.data("link"), function (data) {
                $("#myModal").html(data);
                $("#myModal").modal();
            })
        });
    });
</script>