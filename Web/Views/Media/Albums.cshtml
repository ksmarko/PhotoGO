@model PagedList.IPagedList<Web.Models.AlbumModel>
@using PagedList.Mvc;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="~/Content/Loader.css" />

<!-- Modal window-->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
</div>
<!--End modal-->

<div class="loader" id="loader" style="display:none"></div>
<div id="bodycontent" style="display:block">

    <button class="btn btn-success modal-link" data-link="/Media/CreateAlbum">Create album</button>

    <div class="row">
        @foreach (var album in Model)
        {
            <div class="col-md-2">
                <div class="thumbnail">
                    <a onclick="ActivateLoader()" href="@Url.Action("Images", "Media", new { albumId = album.Id })">
                        <img src="data:image;base64,@System.Convert.ToBase64String(album.Img)" style="height:200px; width:200px">
                    </a>
                    <div>
                        <p><h4>@album.Name</h4></p>
                    </div>
                </div>
            </div>
        }
    </div>

    @Html.PagedListPager(Model, page => Url.Action("Albums", "Media", new { page }))
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".modal-link").click(function () {
            var btn = $(this);
            $.get(btn.data("link"), function (data) {
                $("#myModal").html(data);
                $("#myModal").modal();
            })
        });
    });

    function ActivateLoader() {
        document.getElementById("imgloader").style.display = "none";
        document.getElementById("imgbodycontent").style.display = "block";
    }
</script>